
@{
	ViewBag.Title = "Create";
}

<h2>Create</h2>

<form id="createForm" action="/Trips/Create" method="post">
	<div class="form-group">
		<label>Vehicle No</label>
		<input class="form-control" name="VehicleNo" placeholder="Enter Vehicle No" />
	</div>
	<div class="form-group">
		<label>LoadingDate</label>
		<input class="form-control" name="LoadingDate" placeholder="Eneter Loading Date" />
	</div>
	<div class="form-group">
		<label>KarachiRent</label>
		<input class="form-control" name="KarachiRent" placeholder="Enter Karachi Rent" />
	</div>
	<div class="form-group">
		<label>Weight Details</label>
		<input class="form-control" name="Details" placeholder="Enter Weiht Details" />
	</div>
	<div class="form-group">
		<label>Weight in Tons</label>
		<input class="form-control" name="Weight" placeholder="Enter weight in Tons" />
	</div>
	
	<button id="saveButton" type="button" class="btn btn-success">Save</button>
</form>

<script>

	$("#saveButton").click(function () {

			$.ajax({
				url: "@Url.Action("Create", "Trips")",
				type: "post",
				data: $("#createForm").serialize()
			}).done(function (response) {

				$("#listingArea").html(response);
				window.location.reload();
			});
	});

</script>

